{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@core/*": ["./src/core/*"],
      "@features/*": ["./src/features/*"],
      "@/mcp/*": ["./src/core/mcp/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/store/*": ["./src/shared/stores/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/modules/startups/*": ["./src/features/startups/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "scripts/**/*.ts",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}